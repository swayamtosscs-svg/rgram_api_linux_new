{
  "info": {
    "name": "OTP-Based Forget Password API",
    "description": "Complete collection for testing OTP-based forget password functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "test_email",
      "value": "test@example.com",
      "type": "string"
    },
    {
      "key": "test_otp",
      "value": "123456",
      "type": "string"
    },
    {
      "key": "new_password",
      "value": "newpassword123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Request Password Reset OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/forgot-password-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "forgot-password-otp"]
        },
        "description": "Request a password reset OTP to be sent to the user's email"
      },
      "response": []
    },
    {
      "name": "2. Verify Password Reset OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"otp\": \"{{test_otp}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/verify-password-reset-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "verify-password-reset-otp"]
        },
        "description": "Verify the OTP before allowing password reset"
      },
      "response": []
    },
    {
      "name": "3. Reset Password with OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"otp\": \"{{test_otp}}\",\n  \"newPassword\": \"{{new_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/reset-password-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "reset-password-otp"]
        },
        "description": "Reset password using the verified OTP"
      },
      "response": []
    },
    {
      "name": "Test Cases",
      "item": [
        {
          "name": "Invalid Email Format",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"invalid-email\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/forgot-password-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "forgot-password-otp"]
            },
            "description": "Test with invalid email format"
          },
          "response": []
        },
        {
          "name": "Missing Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/forgot-password-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "forgot-password-otp"]
            },
            "description": "Test with missing email"
          },
          "response": []
        },
        {
          "name": "Invalid OTP Format",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"otp\": \"123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/verify-password-reset-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-password-reset-otp"]
            },
            "description": "Test with invalid OTP format (should be 6 digits)"
          },
          "response": []
        },
        {
          "name": "Weak Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"otp\": \"{{test_otp}}\",\n  \"newPassword\": \"123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/reset-password-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "reset-password-otp"]
            },
            "description": "Test with weak password (too short)"
          },
          "response": []
        }
      ]
    }
  ]
}
