  "item": [
    {
      "name": "Stream Management",
      "item": [
        {
          "name": "Create Live Stream",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Morning Darshan - Live\",\n  \"description\": \"Join us for morning darshan and prayers\",\n  \"category\": \"darshan\",\n  \"isPrivate\": false,\n  \"allowedViewers\": [],\n  \"tags\": [\"darshan\", \"morning\", \"temple\", \"prayers\"],\n  \"location\": \"Mumbai, India\",\n  \"settings\": {\n    \"quality\": \"720p\",\n    \"enableChat\": true,\n    \"enableLikes\": true,\n    \"enableComments\": true,\n    \"enableScreenShare\": false,\n    \"maxViewers\": 1000,\n    \"isArchived\": true,\n    \"moderationEnabled\": true,\n    \"language\": \"hindi\",\n    \"deityName\": \"Krishna\",\n    \"templeInfo\": {\n      \"name\": \"ISKCON Temple\",\n      \"location\": \"Mumbai, India\",\n      \"contact\": \"+91-1234567890\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/live-stream/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "live-stream", "create"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.streamId) {",
                  "        pm.collectionVariables.set('streamId', response.data.streamId);",
                  "        console.log('Stream ID saved:', response.data.streamId);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
