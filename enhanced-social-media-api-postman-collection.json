{
  "info": {
    "name": "Enhanced Social Media API Collection",
    "description": "Comprehensive API collection for posts, reels, stories, and admin functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "your-jwt-token-here",
      "type": "string"
    },
    {
      "key": "post_id",
      "value": "post-id-here",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "user-id-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"This is my post content with @username mention and #hashtag\",\n  \"type\": \"post\",\n  \"title\": \"Post Title\",\n  \"description\": \"Post description\",\n  \"category\": \"general\",\n  \"religion\": \"hinduism\",\n  \"location\": \"Mumbai, India\",\n  \"mentions\": [\"{{user_id}}\"],\n  \"hashtags\": [\"trending\", \"viral\"],\n  \"collaborators\": []\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/enhanced",
              "host": ["{{base_url}}"],
              "path": ["posts", "enhanced"]
            }
          }
        },
        {
          "name": "Get Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/posts/enhanced?page=1&limit=10&type=post&category=general",
              "host": ["{{base_url}}"],
              "path": ["posts", "enhanced"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "type",
                  "value": "post"
                },
                {
                  "key": "category",
                  "value": "general"
                }
              ]
            }
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated post content\",\n  \"title\": \"Updated title\",\n  \"collaborators\": [\"{{user_id}}\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/enhanced?postId={{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "enhanced"],
              "query": [
                {
                  "key": "postId",
                  "value": "{{post_id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/posts/enhanced?postId={{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "enhanced"],
              "query": [
                {
                  "key": "postId",
                  "value": "{{post_id}}"
                }
              ]
            }
          }
        }
      ]
    },
