{
  "info": {
    "name": "DP API Collection - No Auth Required",
    "description": "Collection for testing Display Picture (DP) API endpoints without authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get DP API Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/dp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "dp"]
        },
        "description": "Get information about all available DP API endpoints"
      }
    },
    {
      "name": "Upload Display Picture",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "image",
              "type": "file",
              "src": []
            },
            {
              "key": "userId",
              "value": "demo_user",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/dp/upload",
          "host": ["{{baseUrl}}"],
          "path": ["api", "dp", "upload"]
        },
        "description": "Upload a new display picture using real image files. Select an image file and optionally provide a userId."
      }
    },
    {
      "name": "Retrieve Display Picture",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/dp/retrieve?userId=demo_user",
          "host": ["{{baseUrl}}"],
          "path": ["api", "dp", "retrieve"],
          "query": [
            {
              "key": "userId",
              "value": "demo_user",
              "description": "User ID to find their DP"
            }
          ]
        },
        "description": "Get display picture information by userId, publicId, or imageUrl. Modify the query parameters to use different search methods."
      }
    },
    {
      "name": "Delete Display Picture",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"publicId\": \"user/demo_user/dp/dp_demo_user_timestamp\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/dp/delete",
          "host": ["{{baseUrl}}"],
          "path": ["api", "dp", "delete"]
        },
        "description": "Delete a display picture by publicId, imageUrl, or userId. Modify the body to use different deletion methods."
      }
    }
  ]
}
