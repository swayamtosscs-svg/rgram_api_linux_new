{
  "info": {
    "name": "Block/Unblock API Collection",
    "description": "API endpoints for blocking and unblocking users in Rgram",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your_jwt_token_here",
      "type": "string"
    },
    {
      "key": "user_id_to_block",
      "value": "user_id_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Block User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/block/{{user_id_to_block}}",
          "host": ["{{base_url}}"],
          "path": ["block", "{{user_id_to_block}}"]
        },
        "description": "Block a user. This will:\n1. Add user to blocked list\n2. Remove any existing follow relationships\n3. Send notification to blocked user"
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/block/{{user_id_to_block}}",
              "host": ["{{base_url}}"],
              "path": ["block", "{{user_id_to_block}}"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n  \"success\": true,\n  \"message\": \"User blocked successfully\",\n  \"data\": {\n    \"blockedUserId\": \"user_id\",\n    \"blockedUserName\": \"User Name\"\n  }\n}"
        }
      ]
    },
    {
      "name": "Unblock User",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/block/{{user_id_to_block}}",
          "host": ["{{base_url}}"],
          "path": ["block", "{{user_id_to_block}}"]
        },
        "description": "Unblock a user. This will:\n1. Remove user from blocked list\n2. Send notification to unblocked user"
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/block/{{user_id_to_block}}",
              "host": ["{{base_url}}"],
              "path": ["block", "{{user_id_to_block}}"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n  \"success\": true,\n  \"message\": \"User unblocked successfully\",\n  \"data\": {\n    \"unblockedUserId\": \"user_id\",\n    \"unblockedUserName\": \"User Name\"\n  }\n}"
        }
      ]
    },
    {
      "name": "Get Blocked Users List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/user/blocked",
          "host": ["{{base_url}}"],
          "path": ["user", "blocked"]
        },
        "description": "Get list of all blocked users with their profile information"
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/blocked",
              "host": ["{{base_url}}"],
              "path": ["user", "blocked"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n  \"success\": true,\n  \"message\": \"Blocked users retrieved successfully\",\n  \"data\": {\n    \"blockedUsers\": [\n      {\n        \"_id\": \"user_id\",\n        \"username\": \"username\",\n        \"fullName\": \"Full Name\",\n        \"avatar\": \"avatar_url\",\n        \"bio\": \"User bio\",\n        \"followersCount\": 100,\n        \"followingCount\": 50,\n        \"postsCount\": 25,\n        \"isPrivate\": false,\n        \"isVerified\": false,\n        \"verificationType\": null\n      }\n    ],\n    \"totalBlocked\": 1\n  }\n}"
        }
      ]
    }
  ]
}



