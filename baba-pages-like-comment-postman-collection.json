        {
          "name": "Get Like Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/baba-pages/{{babaPageId}}/like?contentId={{postId}}&contentType=post&userId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "baba-pages", "{{babaPageId}}", "like"],
              "query": [
                {
                  "key": "contentId",
