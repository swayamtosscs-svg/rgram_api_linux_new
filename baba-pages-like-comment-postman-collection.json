{
  "info": {
    "name": "Baba Pages Like & Comment API",
    "description": "Collection for testing like and comment functionality for Baba Pages posts, videos, and stories",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Like API",
      "item": [
        {
          "name": "Like Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contentId\": \"{{postId}}\",\n  \"contentType\": \"post\",\n  \"userId\": \"{{userId}}\",\n  \"action\": \"like\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/baba-pages/{{babaPageId}}/like",
              "host": ["{{baseUrl}}"],
              "path": ["api", "baba-pages", "{{babaPageId}}", "like"]
            }
          }
        },
        {
